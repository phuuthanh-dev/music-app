extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
    .container.my-3
      .row  
        .col-12
          +box-head(pageTitle)

      .row
        each topic in topics
          .col-3.mb-3
            .card
              img(src=topic.avatar)
              .card-body
                h5.card-title= topic.title
                p.card-text= topic.description
                a.btn.btn-primary(href=`/songs/${topic.slug}`) Xem chi tiết